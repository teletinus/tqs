{% extends('base.html.twig') %}

{% block body %}
    <h1>List of all posts</h1>
    <a class="btn btn-success" href="{{path('post_create')}}"> + Add new post</a>
    <table class="table table-striped mt-5">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Description</td>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.description}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
